
@{
    ViewData["Title"] = "Usuarios";
}

<div class="container">

    <div class="row">

        <div class="col-md-12 mx-auto">
            <h2 class="my-4">Gerenciamento de Funcionários</h2>
            <table class="table table-bordered table-responsive">
                <tr>
                    <td>Nome Funcionario</td>
                    <td>Email</td>
                    <td>Cpf</td>
                    <td></td>
                </tr>
                @foreach (var u in ViewBag.Usuarios)
                {
                    <tr>
                        <td>@u.Nome</td>
                        <td>@u.Email</td>
                        <td>@u.Cpf</td>
                        
                        <td>

                            <form action="RemoveUsuario" method="post">
                                <input hidden id="id" name="id" value="@u.Id" />
                                <input type="submit" name="remover" value="X" />
                            </form>
                            
                        </td>
                    </tr>
                }
            </table>
            <a asp-controller="Usuario" asp-action="CadastroFuncionario">Cadastrar Funcionario</a>
        </div>


    </div>

</div>