
@{
    ViewData["Title"] = "ContaUsuario";
}


<div class="container">

    <div class="row">

        <div class="col-md-12 text-center"><h1>Minha Conta</h1></div>
        <div class="col-sm-6 col-sm-offset-3 ">
            <h3>Dados Pessoais</h3>
            <div class="form-group table-bordered">
                <label>Nome:</label>
                <input class="form-control" name="nome" value="" placeholder="Manoel Tavares" />
            </div>
            <div class="form-group table-bordered">
                <label>Email:</label>
                <input class="form-control" name="email" value="" placeholder="Meu Email" />
            </div>
            <h3>Endereço</h3>
            <div class="form-group table-bordered">
                <label>Logradouro</label>
                <input class="form-control" type=" name="logradouro" value="" placeholder="Quadra 303 Norte" />
            </div>
            <div class="form-group table-bordered">
                <label>Bairro</label>
                <input class="form-control" type=" name="bairro" value="" placeholder="Plano Diretor Norte" />
            </div>
            <div class="form-group table-bordered">

                <label>Complemento</label>
                <input class="form-control" type=" name="complemento" value="" placeholder="Perto de Tal lugar" />
            </div>
            <div class="form-group table-bordered">
                <label>Cidade</label>
                <input class="form-control" type=" name="cidade" value="" placeholder="Palmas" />
            </div>
            <div class="form-group table-bordered">
                <label>Estado</label>
                <select class="form-control">
                    <option value="value">Tocantins</option>
                </select>
            </div>
            <input type="submit" value="Alterar" class="btn btn-primary" />



        </div>



    </div>

</div>