@{
    ViewData["Title"] = "Ljx Hardwares - Inicio";
}


<div class="container">

    <div class="row">
        <div class="col-md-12 text-center py-3">
            <h1 class="my-1">Ljx Hardware</h1>
            <p>O Maior e-Commerce da Internet</p>

        </div>
        <div class="col-sm-12 text-center my-3">
            <ul class="nav nav-justified p-2 bg-dark shadow">
                <li class="nav-item"><a class="nav-link" href="#">PlacaMãe</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Processadores</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Memórias</a></li>
