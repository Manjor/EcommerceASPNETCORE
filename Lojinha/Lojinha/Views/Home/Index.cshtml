                <li class="nav-item"><a class="nav-link" href="#">Adaptadores</a></li>
            </ul>
        </div>
        @foreach (var produto in ViewBag.Produtos)
    {

        <div class="col-10 col-sm-6 col-md-4 col-lg-3 my-2 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header">
                    <img src="~/images/placa.jpg" class="img-fluid" alt="Alternate Text" />
                </div>
                <div class="card-body">
                    <h5>@produto.NomeProduto</h5>
                    <p>@produto.Descricao</p>
                    <p>R$ @produto.Valor no Boleto com 5% de Desconto</p>
                    <p>Em até 8 vezes de R$ @(produto.Valor / 8)</p>
                </div>
                <div class="card-footer">
                    <button class=" btn btn-success">Comprar Agora</button>
                </div>
            </div>
        </div>
}
