@{
    ViewData["Title"] = "GerenciarProdutos";
}



<div class="container">

    <div class="row">

        <div class="col-md-10 mx-auto my-3">
            <h3 class="text-center my-2">Gerenciamento de Produtos</h3>
            <table class="table table-responsive-md table-bordered">
                <tr class="text-primary">
                    <td>Nome Produto</td>
                    <td>Descricao</td>
                    <td>Quantidade</td>
                    <td>Valor</td>
                    <td></td>
                </tr>
                @foreach (var p in ViewBag.Produtos)
                {
                <tr>
                    <td>@p.NomeProduto</td>
                    <td>@p.Descricao</td>
                    <td>@p.Quantidade</td>
                    <td>R$ @p.Valor</td>
                    <td>
                        <form class="my-1" action="RemoveProduto" method="post">
                            <input hidden id="nome" name="id" value="@p.Id" />
                            <input class="btn btn-danger btn-block" type="submit" name="remover" value="X" />
                        </form>
                        <form action="AlteraProduto" method="get">
                            <input  name="id" value="@p.Id" hidden />
                            <input class="btn btn-primary btn-block" type="submit" name="alterar" value="Alterar" />
                        </form>
                    </td>
                </tr>
                 }
            </table>
            <a asp-controller="Produto" asp-action="CadastroProduto">Cadastrar Produtos</a>
        </div>


    </div>

</div>